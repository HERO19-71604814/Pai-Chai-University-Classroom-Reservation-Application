            <Button
                android:layout_weight="1"
                android:id="@+id/BtnNum32"
                android:text="33"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/BtnNum33"
                android:text="34"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/BtnNum34"
                android:text="35"/>
        </TableRow>

        <TableRow>
